

<h1>Vaccinations</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vaccinations.each do |vaccination| %>
      <tr>
        <td><%= vaccination.title %></td>
        <td><%= link_to 'Show', vaccination, class: 'btn' %></td>
        <td><%= link_to 'Edit', edit_vaccination_path(vaccination), class: 'btn' %></td>
        <td><%= link_to 'Destroy', vaccination, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vaccination', new_vaccination_path, class: 'btn btn-dark' %>
