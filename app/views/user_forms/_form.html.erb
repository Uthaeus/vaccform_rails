<div class='row'>
  <div class="col-md-8">
    <%= form_with(model: user_form, local: true) do |f| %>
      <% if user_form.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user_form.errors.count, "error") %> prohibited this user_form from being saved:</h2>

          <ul>
          <% user_form.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.fields_for :vaccs do |v| %>
          <%= render 'vaccs_fields', f: v %>
        <% end %>

        <div>
          <%= link_to_add_association 'Add From Selection', f, :vaccs, partial: 'vaccs_fields', class: 'btn btn-outline-info' %>
          <%= link_to_add_association 'Add Blank Field', f, :vaccs, partial: 'blank_vacc_fields', class: 'btn btn-outline-info' %>
        </div>
      </div>

      <div>
        <%= f.fields_for :form_images do |fi| %>
          <%= render 'image_fields', f: fi %>
        <% end %>

        <div>
          <%= link_to_add_association 'Add Image', f, :form_images, partial: 'image_fields', class: 'btn btn-outline-dark top-marg' %>
        </div>
      </div>
      <div class="top-marg-large">
        <div class="form-group">
          <%= f.submit 'Create Form', class: 'btn btn-outline-primary btn-block top-marg' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <div class='card form-card'>
      <h4 class="top-marg">Notes:</h4>
      <div class="notes-list">
        <p>The following are included in the dropdown selection menu</p>
        <ul>
          <li>Tdap</li>
          <li>Tuberculosis</li>
          <li>Hep A</li>
          <li>Hep B</li>
          <li>Varicella</li>
          <li>Rubella</li>
          <li>Mumps</li>
          <li>Anti-hbs</li>
          <li>Rubeola</li>
        </ul>
        <p>If the selection menu does not include a needed option, open a blank item using the <u><i>Add Blank Field</i></u> button</p>

      </div>
    </div>
  </div>
</div>









